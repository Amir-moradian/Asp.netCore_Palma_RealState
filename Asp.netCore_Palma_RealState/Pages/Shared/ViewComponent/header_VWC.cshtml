@using Asp.netCore_Palma_RealState.Models
@model Asp.netCore_Palma_RealState.Models.ViewModel.header_VWM
@inject SignInManager<User_Model> SignInManager
@inject UserManager<User_Model> UserManager


<header>
    <nav>
        <!--   صفحات = خانه - املاک-->
        <div class="ul d-flex justify-content-center align-items-center">
            <li><a class="active" href="/">خانه</a></li>
            <li><a href="/all_estate"> املاک </a></li>
        </div>
        <!--            logo-->
        <div class="logo">
            <h3> مشاورین املاک داداش نیما و دوستان </h3>
        </div>
        <!--            ورود - ثبت نام-->
        <div class="d-flex justify-content-center align-items-center">

            @if (SignInManager.IsSignedIn(User))
            {

                <a  href="/Favorits/favourites" title="Manage">سلام @Model?.full_name</a>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class=" btn btn-link ">خروج</button>
                </form>

            }
            else
            {

                <a asp-area="Identity" asp-page="/Account/Register">ثبت نام</a>
                <a asp-area="Identity" asp-page="/Account/Login">ورود</a>

            }

        </div>
    </nav>
</header>

