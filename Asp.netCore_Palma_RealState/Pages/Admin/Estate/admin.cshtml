@page
@model Asp.netCore_Palma_RealState.Pages.Admin.Estate.adminModel
@{
}
<div class="row mt-5">

    @await Component.InvokeAsync("admin_Menu")
    

    <div class="col-lg-9 col-md-9 col-12">
        <div class="card">
            <div class="card-header d-flex flex-wrap">
                <a asp-page="add_estate" class="btn btn-primary text-white mr-0">
                    <i class="fas fa-plus"></i>
                    ایجاد ملک جدید
                </a>
                <h4 class="text-center font-weight-bold m-auto"> مدیریت املاک </h4>
            </div>
            <div class="card-body">
                @if (Model.show_all_estate.Any())
                {
                    <table class="table table-bordered table-striped table-hover mt-2">
                        <thead>
                            <tr>
                                <th class="text-center"> عکس </th>
                                <th class="text-center"> نام </th>
                                <th class="text-center"> متراژ </th>
                               @*  <th class="text-center"> دسته بندی</th> *@
                                <th class="text-center">مدیریت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.show_all_estate)
                            {
                                <tr>
                                    <td class="text-center align-middle"><img src="~/image/Estates/@item.image" class="img-fluid" width="60" height="60" alt=""></td>
                                    <td class="text-center align-middle">@item.tittle</td>
                                    <td class="text-center align-middle">@item.metrage</td>
                                    @*  <td class="text-center align-middle">آپارتمان</td> *@
                                    <td class="text-center">
                                        <div class="btn-group" dir="ltr" role="group" aria-label="Basic example">
                                            <a asp-page="detail_estate" asp-route-id="@item.ID_estate" class="btn btn-sm btn-info"><i class="fas fa-list"></i></a>
                                            <a asp-page="edit_estate" asp-route-id="@item.ID_estate" class="btn btn-sm btn-warning"> <i class="fas fa-edit"></i> </a>
                                            <a asp-page="delete_estate" asp-route-id="@item.ID_estate" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        ملکی موجود نیست <a href="#" class="alert-link">کلیک کنید</a>. 
                    </div>
                }


            </div>

        </div>
    </div>
</div>
