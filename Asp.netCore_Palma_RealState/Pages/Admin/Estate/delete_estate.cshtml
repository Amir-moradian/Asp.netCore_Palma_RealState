@page
@model Asp.netCore_Palma_RealState.Pages.Admin.Estate.delete_estateModel
@{
}
<div class="row mt-5">
    <div class="col-lg-3 col-md-3 col-12">
        <div class="text-right">
            <div class="list-group p-0 mb-5">
                <a href="#" class="active list-group-item list-group-item-action">
                    مدیریت املاک
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-9 col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center font-weight-bold m-auto"> حذف ملک </h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="estate_vwm.t_Estate.ID_estate"/>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <label class="h6 my-2"> نام </label>
                            <input asp-for="estate_vwm.t_Estate.tittle" type="text" class="form-control" disabled>
                            <label class="h6 my-2"> متراژ </label>
                            <input asp-for="estate_vwm.t_Estate.metrage" type="text" class="form-control" disabled>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <img src="~/image/Estates/@Model.estate_vwm.img_up" width="200px" height="200px" class="my-2 mx-auto d-block">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <button class="btn btn-danger btn-block mr-1 my-3" type="submit"> حذف </button>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <a asp-page="admin" class="btn btn-secondary btn-block my-3"> بازگشت </a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
